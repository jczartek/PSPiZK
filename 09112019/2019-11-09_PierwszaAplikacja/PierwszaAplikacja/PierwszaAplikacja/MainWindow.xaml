<Window x:Class="PierwszaAplikacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PierwszaAplikacja"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="przycisk" 
                Margin="10,10,0,0" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="200" Height="100" 
                Content="Etykieta" FontSize="30"
                Background="Blue"
                Foreground="Red"
                Click="Przycisk_Click" />
        <ProgressBar Name="pasekPostępu"
                     Maximum="255"
                     Margin="10,150,0,0"
                     HorizontalAlignment="Left" VerticalAlignment="Top"
                     Width="600" Height="50" />
        <Slider Margin="10,220,0,0"
                Maximum="255"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="600" Height="30" ValueChanged="Slider_ValueChanged" />
    </Grid>
</Window>
