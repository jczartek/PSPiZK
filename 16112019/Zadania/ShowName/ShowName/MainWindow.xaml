<Window x:Class="ShowName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowName"
        mc:Ignorable="d"
        Title="Wyświetl Imię" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" Margin="10">
        <Label VerticalContentAlignment="Center" Height="35" Content="Wpisz imię:"  FontWeight="Bold" FontSize="12"/>
        <TextBox VerticalContentAlignment="Center" Height="35" Name="tbName" Margin="0, 2, 0, 5" FontSize="12"/>
        <Button  Height="35" Content="Pokaż imię" Click="Button_Click"/>
    </StackPanel>
</Window>
